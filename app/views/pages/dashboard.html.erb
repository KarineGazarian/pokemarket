<!-- dashboard.html.erb -->
<div>
<h1 class ="form-title">My Pokebowl</h1>
</div>

<br>

<div>
  <div class="d-flex justify-content-between">
    <h3>My Pokemons</h3>
    <%= link_to new_pokemon_path do %>
     <%= image_tag "https://upload.wikimedia.org/wikipedia/en/3/39/Pokeball.PNG", height: 30, width: 30 %>
     <%= "Add a pokemon" %>
    <% end  %>
  </div>
  <div class="cards-dashboard">
    <% @user_pokemons.each do |pokemon| %>
    <div class="card-trip card-trip-dashboard card-trip-infos <%= pokemon.onsale? ? 'onsale' : 'offsale' %>">
      <div class="card-details">
        <h3><%= pokemon.name %></h3>
        <% if pokemon.photoseed.nil? %>
        <%= cl_image_tag pokemon.photo, height: 300, width: 400, crop: :fill, class: "rounded mx-auto d-block" %>
        <% else %>
        <%= image_tag pokemon.photoseed,height: 300, width: 400, crop: :fill, align: :center, class: "rounded mx-auto d-block" %>
        <% end %>
        <div class="d-flex justify-content-between">

          <div class="ml-3">
            <p> Category: <%= pokemon.category %></p>
            <p> Level: <%= pokemon.level %></p>
            <p>
              <% if !pokemon.onsale? %>
              <%= link_to 'Add on sale', pokemon_transactions_path(pokemon), method: :patch %>
              <% end %>

            </p>
            <p><%= link_to 'delete', pokemon_path(pokemon), method: :delete %></p>
            <p><%= link_to 'edit', edit_pokemon_path(pokemon) %></p>
          </div>
          <div class="card-trip-pricing mr-3">
            <p><strong> Price: <%= pokemon.price %>€</strong></p>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

<br>

<div>
  <h3>My Wishlist</h3>
  <div class="cards-dashboard">
      <% @wishlist_pokemons.each do |wishlist| %>
        <div class="card-trip card-trip-dashboard card-trip-infos">
          <div class="card-details">
            <h3><%= wishlist.pokemon.name %></h3>
              <% if wishlist.pokemon.photoseed.nil? %>
                <%= cl_image_tag wishlist.pokemon.photo, height: 300, width: 400, crop: :fill, class: "rounded mx-auto d-block" %>
                <% else %>
                <%= image_tag wishlist.pokemon.photoseed,height: 300, width: 400, crop: :fill, align: :center, class: "rounded mx-auto d-block" %>
              <% end %>
              <p> Category: <%= wishlist.pokemon.category %></p>
              <p> Level: <%= wishlist.pokemon.level %></p>
              <p><strong> Price: <%= wishlist.pokemon.price %>€</strong></p>
              <%= link_to "Buy", pokemon_transactions_path(wishlist.pokemon), method: :post, class: "btn btn-primary" %>
              <%= link_to "Remove", pokemon_dashboard_path(wishlist.pokemon), method: :delete %>
          </div>
        </div>
      <% end %>
  </div>

</div>


