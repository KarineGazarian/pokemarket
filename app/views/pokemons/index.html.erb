<div class="cards">
  <% @pokemons.each do |pokemon| %>
    <div class="flip-card">
      <div class="card-trip flip-card-inner">
        <div class="flip-card-front">
          <img src="" alt="">
          <div class="card-trip-infos">
            <div>
              <h3><%= pokemon.name %></h3>
              <p>Category: <%= pokemon.category %></p>
              <p>Level: <%= pokemon.level %></p>
            </div>
            <h2 class="card-trip-pricing"><%= pokemon.price %>â‚¬</h2>
          </div>
        </div>
        <div class="flip-card-back">
          <h3><%= link_to pokemon.name, pokemon %></h3>
          <p>Sold by: <%= pokemon.user.username %> </p>
          <p>Description: Lorem Ipsum </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
