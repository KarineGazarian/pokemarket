<%= simple_form_for(@pokemon) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-inputs">
    <%= f.input :category %>
  </div>

  <div class="form-inputs">
    <%= f.input :level %>
  </div>

  <div class="form-inputs">
    <%= f.input :price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class:"btn btn-primary"%>
  </div>
<% end %>
