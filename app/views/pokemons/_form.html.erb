<%= simple_form_for(@pokemon) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-inputs">
    <%= f.input :category, collection: %w(normal fire water grass electric ice fighting poison ground flying psychic bug rock ghost dark dragon steel fairy) %>
  </div>

  <div class="form-inputs">
    <%= f.input :level %>
  </div>

  <div class="form-inputs">
    <%= f.input :description %>
  </div>

  <div class="form-inputs">
    <%= f.input :price %>
  </div>

  <div class="form-inputs ">
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>

  <div class="form-actions align-center">
    <button class="btn btn-primary btn-new">
    <%= f.button :submit %>
    </button>
  </div>
<% end %>

